! URxvt Settings

! Set terminal font(s)
URxvt.font: xft:Source Code Pro:style=SemiBold:pixelsize=13, xft:Iosevka:pixelsize=13

! Set terminal letter spacing
URxvt.letterSpace: -1

! Enable cursor blink
URxvt.cursorBlink: 1

! Disable scrollbar
URxvt.scrollBar: false

! Disable scroll on output
URxvt*scrollTtyOutput: false

! Scroll in relation to buffer
URxvt*scrollWithBuffer: true

! Jump to bottom on keypress
URxvt*scrollTtyKeypress: true

! Disable keycap picture insert mode
URxvt.iso14755: false
URxvt.iso14755_52: false

! Disable perl extensions
URxvt.perl-ext:
URxvt.perl-ext-common:

! Fix Ctrl+Arrow behavior
URxvt.keysym.Control-Up:     \033[1;5A
URxvt.keysym.Control-Down:   \033[1;5B
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C
